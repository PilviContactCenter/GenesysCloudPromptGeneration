# Azure Text-to-Speech Configuration
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=westeurope

# Genesys Cloud API Credentials (Client Credentials Grant - for prompt exports)
# Create an OAuth client in Genesys Cloud with Client Credentials grant type
GENESYS_CLIENT_ID=your-client-credentials-client-id
GENESYS_CLIENT_SECRET=your-client-credentials-client-secret
GENESYS_REGION=mypurecloud.de

# Genesys Cloud OAuth Configuration (Authorization Code Grant - for user login)
# Create an OAuth client in Genesys Cloud with Authorization Code grant type
# Redirect URI should match your app URL + /oauth/callback
OAUTH_CLIENT_ID=your-authorization-code-client-id
OAUTH_CLIENT_SECRET=your-authorization-code-client-secret
OAUTH_REDIRECT_URI=http://localhost:5001/oauth/callback
GENESYS_BASE_URL=mypurecloud.de

# Flask Secret Key (generate a random string for production)
SECRET_KEY=change-this-to-a-random-secret-key

# Local Admin Password (optional - for local admin bypass login)
ADMIN_PASSWORD=your-admin-password
